<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/head.ejs") %>
    <title>Home | Clear Write</title>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-3">
    <form action="/blog/create-new-post" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title*</label>
          <input type="text" name="title" class="form-control" id="title" placeholder="Add Title (required)" aria-describedby="title" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" name="description" id="description" aria-describedby="description">
        </div>
        <div class="mb-4">
            <label for="floatingTextArea" class="mb-2">Body</label>
            <textarea class="form-control" name="body" placeholder="Start Writing..." id="floatingTextArea" required></textarea>
        </div>
        <div class="input-group mb-4">
            <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" aria-label="Upload">
            <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Upload</button>
          </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
      </form>
    </div>
    <%- include("./partials/footer.ejs") %>
    <%- include("./partials/scripts.ejs") %>
</body>
</html>